  const ejercicios = {
    bajar: [
      "30 minutos de caminata rápida o trote suave",
      "3 series de 15 sentadillas",
      "3 series de 10 flexiones",
      "2 series de plancha de 30 segundos",
      "Estiramientos de cuerpo completo (10 minutos)"
    ],
    subir: [
      "4 series de 8-10 repeticiones de press de banca",
      "4 series de 10-12 repeticiones de sentadillas con peso",
      "3 series de 12 curls de bíceps",
      "3 series de 12 press militar",
      "3 series de plancha de 1 minuto"
    ],
    mantener: [
      "20 minutos de cardio moderado (ciclismo, natación)",
      "3 series de 12 sentadillas",
      "3 series de 10 flexiones",
      "3 series de plancha de 45 segundos",
      "Estiramientos y movilidad (10 minutos)"
    ]
  };

  const comidaExtra = "Batido de proteína con 200 ml de leche y 1 plátano mediano";

  function generarPlan() {
    const age = document.getElementById("age").value.trim();
    const weight = document.getElementById("weight").value.trim();
    const height = document.getElementById("height").value.trim();
    const sex = document.getElementById("sex").value;
    const condition = document.getElementById("condition").value.trim();
    const goal = document.getElementById("goal").value;
    const foodInput = document.getElementById("food").value.toLowerCase();
    const restricciones = foodInput ? foodInput.split(",").map(f => f.trim()) : [];

    if (!age || !weight || !height) {
      alert("Por favor, completa edad, peso y estatura.");
      return;
    }

    let plan = `Tu plan de alimentación:\n\n`;
    plan += `Edad: ${age} años\nPeso: ${weight} kg\nEstatura: ${height} cm\nSexo: ${sex}\n`;
    if(condition) plan += `Condición o alergias: ${condition}\n`;
    plan += `Objetivo: ${goal.charAt(0).toUpperCase() + goal.slice(1)}\n\n`;

    function filtrarYSeleccionar(lista, restricciones, n) {
      let filtrado = lista.filter(item => !restricciones.some(r => item.toLowerCase().includes(r)));
      if(filtrado.length < n) return filtrado;
      const seleccion = [];
      while(seleccion.length < n) {
        const rand = filtrado[Math.floor(Math.random() * filtrado.length)];
        if(!seleccion.includes(rand)) seleccion.push(rand);
      }
      return seleccion;
    }

    const desayunoPlan = filtrarYSeleccionar(desayunos, restricciones, 3);
    const comidaPlan = filtrarYSeleccionar(comidas, restricciones, 3);
    const cenaPlan = filtrarYSeleccionar(cenas, restricciones, 3);

    plan += `Desayuno (elige uno):\n- ${desayunoPlan.join("\n- ")}\n\n`;
    plan += `Comida (elige uno):\n- ${comidaPlan.join("\n- ")}\n\n`;

    if(goal === "subir") {
      plan += `Comida extra para ganar masa muscular:\n- ${comidaExtra}\n\n`;
    }

    plan += `Cena (elige uno):\n- ${cenaPlan.join("\n- ")}\n\n`;

    plan += `Rutina recomendada de ejercicios:\n`;
    ejercicios[goal].forEach((ej, i) => {
      plan += `${i+1}. ${ej}\n`;
    });

    document.getElementById("resultado").textContent = plan;
  }

  function reiniciar() {
    document.getElementById("age").value = "";
    document.getElementById("weight").value = "";
    document.getElementById("height").value = "";
    document.getElementById("sex").value = "hombre";
    document.getElementById("condition").value = "";
    document.getElementById("goal").value = "bajar";
    document.getElementById("food").value = "";
    document.getElementById("resultado").textContent = "";
  }
</script>
